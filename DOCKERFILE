# ✅ Use specific Python version to avoid Render defaulting to 3.13.x
FROM python:3.10.13-slim

# ✅ Prevent Python from writing pyc files & flush output instantly
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# ✅ Set working directory inside container
WORKDIR /app

# ✅ Install system dependencies required by your app
RUN apt-get update && apt-get install -y \
    gcc \
    build-essential \
    libxml2-dev \
    libxslt1-dev \
    zlib1g-dev \
    libmagic1 \
    poppler-utils \
    tesseract-ocr \
    libffi-dev \
    antiword \
    curl \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# ✅ Upgrade pip and install wheel/setuptools first
RUN pip install --upgrade pip setuptools wheel

# ✅ Copy all project files
COPY . .

# ✅ Install all Python dependencies
RUN pip install -r requirements.txt

# ✅ Run your Streamlit app
CMD ["streamlit", "run", "main.py", "--server.port=10000", "--server.enableCORS=false"]

