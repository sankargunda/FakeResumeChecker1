# ✅ Base Python image
FROM python:3.10-slim

# ✅ Prevent Python from writing pyc files to disc and enable instant output
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# ✅ Create working directory
WORKDIR /app

# ✅ Install build tools and system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    build-essential \
    libxml2-dev \
    libxslt1-dev \
    zlib1g-dev \
    libmagic1 \
    poppler-utils \
    tesseract-ocr \
    libffi-dev \
    antiword \
    curl \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# ✅ Upgrade pip and preinstall setuptools and wheel
RUN pip install --upgrade pip setuptools>=65.0.0 wheel>=0.38.0

# ✅ Copy all project files into container
COPY . .

# ✅ Install Python packages
RUN pip install -r requirements.txt

# ✅ Start Streamlit
CMD ["streamlit", "run", "main.py", "--server.port=10000", "--server.enableCORS=false"]
